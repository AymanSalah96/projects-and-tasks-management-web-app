<% include ../partials/header %>

<div class="container">

  <div class="row">

    <h1 style="text-align: center;">Invite Users To: <%= project.name %></h1>

    <div style="width: 30%; margin: 25px auto;">
      <form action="/projects/<%= project._id %>/invite?_method=put" method="POST">
        <div class="form-group">
            <textarea class="form-control" name="invitations" placeholder="invite users to join this project, enter their emails spearated with commas" rows="10"></textarea>
        </div>
        <div class="form-group">
          <button class="btn btn-lg btn-primary btn-block">Submit</button>
        </div>
      </form>
      <a href="/projects">Go Back</a>
    </div>
  </div>
</div>

<% include ../partials/footer %>
